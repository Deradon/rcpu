#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.expand_path("../../lib", __FILE__))

if ARGV.empty?
  puts "usage: rcpu examples/from_spec.rpcu"
  exit 1
end

require 'rcpu'

begin
  require 'pry'
rescue LoadError
end

def clean_scope(lib, file)
  lib.instance_eval(File.read(file), file)
end

lib = RCPU::Library.new
clean_scope(lib, ARGV[0])
linker = RCPU::Linker.new
linker.compile(lib)
emu = RCPU::Emulator.new(linker.finalize)
emu.memory.add_extensions(linker.extensions)


running = false

trap(:INT) do
  running = false
end

def help
  puts "(^C) stop execution"
  puts "(e) evaluate ruby"
  puts "(h) help"
  puts "(p) ruby shell" if binding.respond_to?(:pry)
  puts "(r) run"
  puts "(s) step"
  puts "(q) quit"
end

puts "Welcome to RCPU:"
help

while true
  pc, ins = emu.next_instruction
  puts "#{pc.to_s(16).rjust(4, '0')}: #{ins}"
  print "=> "
  input = $stdin.gets
  exit if input.nil?
  emu.start

  input.chomp!
  cmd = (input.slice!(0) || '').downcase
  input.strip!

  case cmd
  when "e"
    puts ">> #{emu.instance_eval(input)}"
  when "h"
    help
  when "p"
    emu.instance_eval { binding.pry }
  when "r"
    running = true

    while true
      pc, ins = emu.next_instruction
      emu.tick

      # Ctrl-C
      unless running
        break
      end

      if pc == emu[:PC]
        break
      end
    end

  when "s", ""
    input = 1 if input.empty?
    Integer(input).times do
      emu.tick
    end
  when "q"
    exit
  else
    puts "Unknown command. Try 'h' for help."
  end

  emu.stop
end

